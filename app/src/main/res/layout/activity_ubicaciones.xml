<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="100dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:id="@+id/cardview_ubicaciones_id">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nombre_ubicacion"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Nombre ubicacion"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/latitud_ubicacion"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud"
            />
            <TextView
                android:id="@+id/latitud_coordenada"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longitud ubicacion"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/longitud_ubicacion"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitud"
                />
            <TextView
                android:id="@+id/longitud_coordenada"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longitud ubicacion"
                />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>